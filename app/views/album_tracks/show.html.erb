<% @page_title = "My music track" %>
<%= link_to("back to album" , artist_music_group_album_path(@artist,@group,@album))%>

<audio id="musicPlayer">
  <source src="<%= @track.music_file.url%>" type="<%=@track.music_file_content_type%>">

Your browser does not support the audio element.
</audio>

	<div class="play">
		

  <source name="playlist" src="<%= @track.music_file.url%>" type="<%=@track.music_file_content_type%>">

</div>

	<table class="table zebra-striped table-condensed table-hover">
		<th>#</th>
		<th>Name</th>
		<th>Length</th>
		<th>Play</th>
		<% if @onlineArtist.id == @group.id %>
			<th>Actions</th>
		<% end %>
		<tr>
			<td><%=@track.position%></td>
			<td><%= @track.name %></td>
			<td><%= @track.track_length %></td>
			<td>
				<button  name="playButtons" onclick="play(0)" id="0">
					<span class="glyphicon glyphicon-play" id="playIcon" aria-hidden="true"></span>
				</button>

			</td>
			<% if @onlineArtist.id == @group.id %>
				<td>
					<%= link_to("edit track" , edit_artist_music_group_album_album_track_path(@artist,@group,@album,@track), :class=> "btn-primary btn-xs")%>

					<%= link_to("delete track" , delete_artist_music_group_album_album_track_path(@artist,@group,@album,@track), :class=> "btn-danger btn-xs")%>
				</td>
			<% end %>	
		
		</tr>




	

</table>