var activatedbutton = document.getElementById("activate "+ "<%= j @company.id.to_s %>")
var activated = <%= @company.activated.to_int %> == 1 ?  true : false
var activatedfield = activatedbutton.previousElementSibling
activatedfield.value = activated == 1 ? 0 : 1
activatedbutton.className = "box " + activated

